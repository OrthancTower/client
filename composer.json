{
  "name": "orthanctower/client",
  "description": "Orthanc Client - Lightweight HTTP client for Orthanc notification server",
  "type": "library",
  "license": "proprietary",
  "keywords": [
    "laravel",
    "notifications",
    "orthanc",
    "monitoring",
    "client"
  ],
  "authors": [
    {
      "name": "OrthancTower",
      "homepage": "https://github.com/OrthancTower"
    }
  ],
  "require": {
    "php": "^8.2|^8.3",
    "illuminate/support": "^12.0",
    "illuminate/http": "^12.0",
    "guzzlehttp/guzzle": "^7.8",
    "orthanc-tower/contracts": "dev-main"
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/OrthancTower/contracts",
      "no-api": true
    },
    {
      "type": "vcs",
      "url": "https://github.com/OrthancTower/client",
      "no-api": true
    }
  ],
  "autoload": {
    "psr-4": {
      "OrthancTower\\Client\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "OrthancTower\\Client\\Tests\\": "tests/"
    }
  },
  "extra": {
    "support": {
      "issues": "https://github.com/OrthancTower/client/issues",
      "source": "https://github.com/OrthancTower/client"
    },
    "branch-alias": {
      "dev-main": "1.0-dev"
    },
    "laravel": {
      "providers": [
        "OrthancTower\\Client\\OrthancClientServiceProvider"
      ],
      "aliases": {
        "Orthanc": "OrthancTower\\Client\\Facades\\Orthanc"
      }
    },
    "config": {
      "publish": {
        "orthanc-config": "config/orthanc-client.php"
      }
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require-dev": {
    "orchestra/testbench": "^10.0",
    "phpunit/phpunit": "^11.0"
  },
  "scripts": {
    "test": "vendor/bin/phpunit"
  }
}
