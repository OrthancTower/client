{
    "name": "g80st/orthanc-client",
    "description": "Lightweight HTTP client for Orthanc notification server",
    "type": "library",
    "license": "proprietary",
    "keywords": [
        "laravel",
        "notifications",
        "orthanc",
        "monitoring",
        "client"
    ],
    "authors": [
        {
            "name": "Rodrigo",
            "email": "your-email@example.com"
        }
    ],
    "require": {
        "php": "^8.2|^8.3",
        "illuminate/support": "^12.0",
        "illuminate/http": "^12.0"
    },
    "require-dev": {
        "orchestra/testbench": "^10.0",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "G80st\\OrthancClient\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "G80st\\OrthancClient\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "G80st\\OrthancClient\\OrthancClientServiceProvider"
            ],
            "aliases": {
                "Orthanc": "G80st\\OrthancClient\\Facades\\Orthanc"
            }
        }
    },
    "scripts": {
        "test": "vendor/bin/pest"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "preferred-install": "dist"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
